<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--tools:context=".TabLayout">-->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dashboard_tablayout_tabs"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:tabTextAppearance="@style/TabText"
        app:tabTextColor="@color/blueTeal"
        app:tabIndicatorColor="@color/blueTeal">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/dashbaord_tablayout_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab1Text"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/dashbaord_tablayout_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab2Text"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/dashbaord_tablayout_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab3Text"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>